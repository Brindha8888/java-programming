import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
Scanner sc=new Scanner (System.in);
float sal=sc.nextFloat();
double hra=0,da=0;
if(sal<15000){
  hra = 0.15*sal;
 da= 0.9*sal;
 }
if(sal>=15000){
 hra=5000;
 da=0.98*sal;
}
System.out.printf("%.2f",sal+hra+da);
    }
}
